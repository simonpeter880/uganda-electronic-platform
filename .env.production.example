# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to version control!

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Your DigitalOcean Droplet IP address
SERVER_IP=YOUR_SERVER_IP

# If you have a domain, use it. Otherwise use the IP
ALLOWED_HOSTS=YOUR_SERVER_IP,localhost,127.0.0.1,api,dashboard.YOUR_SERVER_IP,admin.YOUR_SERVER_IP
ALLOWED_CLIENT_HOSTS=YOUR_SERVER_IP,localhost,127.0.0.1

# Dashboard URL (admin interface)
DASHBOARD_URL=http://YOUR_SERVER_IP/dashboard/

# ==============================================
# DATABASE
# ==============================================
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# ==============================================
# SALEOR API CONFIGURATION
# ==============================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_50_CHARS_MIN
DEFAULT_CHANNEL_SLUG=default-channel

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_SALEOR_API_URL=http://YOUR_SERVER_IP/graphql/
NEXT_PUBLIC_STOREFRONT_URL=http://YOUR_SERVER_IP
SALEOR_APP_TOKEN=

# ==============================================
# UGANDA MOBILE MONEY - MTN MOMO
# ==============================================
# Get these from: https://momodeveloper.mtn.com/
MTN_MOMO_API_KEY=your_mtn_api_key_here
MTN_MOMO_SUBSCRIPTION_KEY=your_mtn_subscription_key_here
MTN_MOMO_API_USER=your_mtn_api_user_uuid
MTN_MOMO_API_SECRET=your_mtn_api_secret
# Use sandbox for testing, production when ready
MTN_MOMO_ENVIRONMENT=sandbox
# MTN_MOMO_ENVIRONMENT=production

# ==============================================
# UGANDA MOBILE MONEY - AIRTEL MONEY
# ==============================================
# Get these from: Airtel Money Uganda
AIRTEL_MONEY_CLIENT_ID=your_airtel_client_id
AIRTEL_MONEY_CLIENT_SECRET=your_airtel_client_secret
# Use uat for testing, production when ready
AIRTEL_MONEY_ENVIRONMENT=uat
# AIRTEL_MONEY_ENVIRONMENT=production

# ==============================================
# SMS NOTIFICATIONS - AFRICA'S TALKING
# ==============================================
# Get these from: https://africastalking.com/
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key
AFRICAS_TALKING_SENDER_ID=YOURSHOP
# Use sandbox for testing, production when ready
AFRICAS_TALKING_ENVIRONMENT=sandbox
# AFRICAS_TALKING_ENVIRONMENT=production

# ==============================================
# SHOP INFORMATION
# ==============================================
SHOP_NAME=Uganda Electronics Store
SHOP_PHONE=256700000000
SHOP_WHATSAPP=256700000000
SHOP_EMAIL=info@yourstore.ug
SHOP_ADDRESS=Kampala, Uganda
SHOP_FACEBOOK=https://facebook.com/yourshop
SHOP_INSTAGRAM=https://instagram.com/yourshop
SHOP_TWITTER=https://twitter.com/yourshop

# ==============================================
# EMAIL CONFIGURATION (Optional - for admin notifications)
# ==============================================
EMAIL_URL=smtp://user:password@smtp.example.com:587/?ssl=True
DEFAULT_FROM_EMAIL=noreply@yourstore.ug

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Set to False in production!
DEBUG=False

# Enable HTTPS when you have SSL certificate
# ENABLE_SSL=True

# ==============================================
# PAYMENT GATEWAY KEYS (If using Stripe/Adyen)
# ==============================================
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLIC_KEY=pk_live_...

# ==============================================
# MONITORING (Optional)
# ==============================================
# SENTRY_DSN=https://...@sentry.io/...

# ==============================================
# DJANGO SETTINGS
# ==============================================
DJANGO_SETTINGS_MODULE=saleor.settings
CELERY_BROKER_URL=redis://cache:6379/1

# ==============================================
# JAEGER TRACING (Optional - for debugging)
# ==============================================
JAEGER_AGENT_HOST=jaeger
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317

# ==============================================
# MEDIA FILES
# ==============================================
# For production, consider using S3/DigitalOcean Spaces
# AWS_MEDIA_BUCKET_NAME=your-bucket
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_ENDPOINT_URL=https://your-region.digitaloceanspaces.com
